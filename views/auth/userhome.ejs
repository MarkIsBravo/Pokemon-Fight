<% include ../partials/boilerplate %>

<div class='container'>
    <h1>Hello, <%= user.nickname %>!</h1>
    <p>Your pokémons are waiting for you...</p>
    <form action='/pokemons/pokemon-index'>
        <input type="submit" value="My Pokémons" />
    </form>
    <form action='/pokemons/add'>
        <input type="submit" value="Search Wild Pokémons" />
    </form>
    <form action='/user/fight'>
        <input type="submit" value="Fight!" />
    </form>
    <form action='/auth/logout'>
        <input type="submit" value="Log Out" />
    </form>
    <div>
        <h3 class='food'><%= user.inventory %></h3>
    </div>
</div>
<% include ../partials/end %>